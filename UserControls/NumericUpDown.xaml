<UserControl x:Class="Notes.UserControls.NumericUpDown"
             x:Name="Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Notes.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Text="{Binding Value, ElementName=Control, FallbackValue='0'}" VerticalContentAlignment="Center"/>
        <Button Content="▲" Grid.Row="0" Grid.Column="1" FontSize="6" Click="Button_UP_Click" Focusable="False"/>
        <Button Content="▼" Grid.Row="1" Grid.Column="1" FontSize="6" Click="Button_DOWN_Click" Focusable="False"/>
    </Grid>
</UserControl>
